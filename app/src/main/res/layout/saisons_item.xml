<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btnsaisonDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:elevation="5dp"
            android:layout_marginStart="124dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/lightGrey"
            android:id="@+id/cardViewsaison">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleSaisons"
                    android:theme="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Guardians of the Galaxy "/>

                <TextView
                    android:id="@+id/detailsaison"
                    android:theme="@style/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2h 21min | Action, Adventure, Fantasy"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>



        <ImageView
            android:id="@+id/picturePersonneSaisons"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/guardians_galaxy"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/grade"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"

            android:layout_alignStart="@+id/picturePersonneSaisons"
            android:layout_alignTop="@+id/picturePersonneSaisons"
            android:layout_marginStart="98dp"
            android:background="@drawable/round_button"
            android:text="8.5" />


    </RelativeLayout>

</LinearLayout>