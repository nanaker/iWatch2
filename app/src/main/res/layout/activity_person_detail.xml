<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MovieDetailActivity"
    android:background="@color/Grey"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="#ffffff"
        app:navigationIcon="@mipmap/ic_back"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picturePersonneDetail"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:src="@drawable/tomm_hardy" />

            <TextView
                android:id="@+id/actorNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Tom Heady"
                android:theme="@style/title" />

            <TextView
                android:id="@+id/birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-8dp"
                android:text="Borne in Sept 15th, 1997"
                android:theme="@style/grade" />

            <TextView
                android:id="@+id/birthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Borne in Sept 15th, 1997"
                android:theme="@style/grade" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/grade_now"
                android:theme="@style/grade" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/rating_personne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="-8dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    app:srb_starSize="16dp"

                    app:srb_numberOfStars="5"
                    app:srb_rating="3"
                    app:srb_stepSize="0.5"
                    app:srb_starBorderWidth="1"
                    app:srb_borderColor="@color/stars"
                    app:srb_drawBorderEnabled="false"
                    app:srb_starBackgroundColor="@color/stars"
                    app:srb_fillColor="@color/bordo"/>

                <Button
                    android:id="@+id/submit_personne"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/ratingbutton"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="3dp"
                    android:onClick="rateMe_personne"
                    android:text="@string/evaluer"
                    android:theme="@style/ButtonRate" />

                <LinearLayout
                    android:id="@+id/rateResultPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/ratePerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.9"
                        android:textColor="#ffffff"
                        android:textSize="9pt"/>
                    <TextView
                        android:theme="@style/directorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_marginLeft="1dp"
                        android:text="/5"/>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/bio"
                android:theme="@style/title" />

            <TextView
                android:id="@+id/bibliographie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before she was Wonder Woman, she was Diana, princess of the Amazons, trained warrior. When a pilot crashes and tells of conflict in the outside world, she leaves home to fight a war, discovering her full powers and true destiny."
                android:textColor="#B3ffffff"
                android:theme="@style/details" />

            <android.support.design.widget.TabLayout
                android:id="@+id/Personnetabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:elevation="4dp"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.design.widget.TabItem
                    android:id="@+id/filmographie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filmo" />

                <android.support.design.widget.TabItem
                    android:id="@+id/comments_personne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commentaire" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/PersonneContainer"
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:background="@color/black" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
